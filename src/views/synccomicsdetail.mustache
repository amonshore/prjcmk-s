<div class="comics-detail">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <input id="comics_name" type="text" class="validate" value="{{name}}">
                    <label for="comics_name">Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="comics_publisher" type="text" class="validate" value="{{publisher}}">
                    <label for="comics_publisher">Publisher</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="comics_authors" type="text" class="validate" value="{{authors}}">
                    <label for="comics_authors">Authors</label>
                </div>
                <div class="input-field col s6">
                    <input id="comics_series" type="text" class="validate" value="{{series}}">
                    <label for="comics_series">Series</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="comics_price" type="text" class="validate" value="{{price}}">
                    <label for="comics_price">Price</label>
                </div>
                <div class="input-field col s6">
                    <select>
                        <option value="" disabled selected>Choose periodicity</option>
                        <option value="2">Weekly</option>
                        <option value="3">Monthly</option>
                    </select>
                    <label>Periodicity</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <textarea id="comics_notes" class="materialize-textarea">{{notes}}</textarea>
                    <label for="comics_notes">Notes</label>
                </div>                
            </div>
        </form>
    </div>
</div>
