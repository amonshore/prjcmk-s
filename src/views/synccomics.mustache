<h1>sync comics <a href="#" class="right">home</a></h1>
<div class="page with-searchbox synccomics" data-page-id="synccomics">
    <div class="row comics-list" data-sid="{{sid}}" data-timeout="{{timeout}}">
        {{#comics}}
        <div class="comics col s12 m6" data-id="{{_id}}" data-cid="{{cid}}" data-search="{{search}}">
            <div class="card small">
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">{{name}}<i class="material-icons right">more_vert</i></span>
                    <p>{{publisher}}</p>
                    <p>{{authors}}</p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>
                    <p>{{notes}}</p>
                </div>
                <div class="card-action">
                    <a href="#" data-action="edit" data-action-params="{{cid}}">Edit</a>
                    <a href="#" data-action="release" data-action-params="{{cid}}">Release</a>
                </div>
            </div>
        </div>
        {{/comics}}
    </div>
    <div id="modal1" class="modal bottom-sheet">
        <div class="modal-content">
            <h4>Edit comics</h4>
            <div class="comics-detail">
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="comics_name" type="text" class="validate">
                                <label for="comics_name">Name</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="comics_publisher" type="text" class="validate">
                                <label for="comics_publisher">Publisher</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="comics_series" type="text" class="validate">
                                <label for="comics_series">Series</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="comics_authors" type="text" class="validate">
                                <label for="comics_authors">Authors</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="comics_price" type="text" class="validate">
                                <label for="comics_price">Price</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <select>
                                    <option value="" disabled selected>Choose periodicity</option>
                                    <option value="2">Weekly</option>
                                    <option value="3">Monthly</option>
                                </select>
                                <label>Periodicity</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
        </div>
    </div>
    <div class="release-list">
        <h4>release</h4>
    </div>
</div>
