<div class="page with-searchbox synccomics" data-page-id="synccomics" data-page-title="Comics">
    <div class="row comics-list" data-sid="{{sid}}" data-timeout="{{timeout}}">
        {{#comics}}
        <div class="comics col s12 m6" data-id="{{_id}}" data-cid="{{cid}}" data-search="{{search}}">
            <div class="card small smallest">
                <div class="card-content">
                    <span class="card-title grey-text text-darken-4">{{name}} <span class="card-price right">&euro; {{price}}</span></span>
                    <div class="row">
                        <div class="col s12 card-notes">{{notes}}</div>
                    </div>
                    <div class="row">
                        <div class="col s12 m4 blue-grey-text">
                            <div class="card-label blue-grey-text text-lighten-1">Publisher</div> {{publisher}}</div>
                        <div class="col s12 m4 blue-grey-text">
                            <div class="card-label blue-grey-text text-lighten-1">Authors</div> {{authors}}</div>
                        <div class="col s12 m4 blue-grey-text">
                            <div class="card-label blue-grey-text text-lighten-1">Series</div> {{series}}</div>
                    </div>
                </div>
                <div class="card-action">
                    <a href="#" data-action="edit" data-action-params="{{cid}}" title="edit"><i class="material-icons blue-grey-text text-lighten-1">edit</i></a>
                    <a href="#" data-action="release" data-action-params="{{cid}}" title="view releases"><i class="material-icons blue-grey-text text-lighten-1">folder</i></a>
                    <a href="#" data-action="release" data-action-params="{{cid}}" title="remove" class="right"><i class="material-icons blue-grey-text text-lighten-1">cancel</i></a>
                </div>
            </div>
        </div>
        {{/comics}}
    </div>
    <div id="modalDetail" class="modal bottom-sheet">
        <div class="modal-content">
            <!-- detail -->
        </div>
        <div class="modal-footer">
            <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
        </div>
    </div>
    <div class="release-list">
        <h4>release</h4>
    </div>
</div>
